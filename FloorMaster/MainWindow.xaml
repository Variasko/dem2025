<Window x:Class="FloorMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FloorMaster"
        mc:Ignorable="d"
        TextElement.FontFamily="Segoe UI"
        TextElement.FontSize="20"
        Title="Мастер пол | Авторизация" Height="400" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Image Source="/Мастер пол.png" />
        <Label Content="Мастер пол" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"/>

        <Label Content="Логин" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label Content="Пароль" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <TextBox Name="LoginEnter" Grid.Row="1" Grid.Column="1" Margin="20" VerticalContentAlignment="Center"/>
        <PasswordBox Name="PasswordEnter" Grid.Row="2" Grid.Column="1" Margin="20" VerticalContentAlignment="Center"/>

        <Button Grid.Row="3" Grid.ColumnSpan="2" Margin="200 20" Content="Войти" Background="#67BA80" Click="Button_Click"/>


    </Grid>
</Window>
